@model IEnumerable<DBFirst.Models.Teacher>

@{
    ViewData["Title"] = "Home Page";
}

<h1 style="text-align:center">Table</h1><br />

<div class=".container">
    <div class="row">
        <div class="col-sm-8">
            <table class="table table-hover ">
                <thead class="table-warning">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Subject</th>
                        <th>Email</th>
                        <th colspan="3" style="text-align:center">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.name</td>
                            <td>@item.subject</td>
                            <td>@item.email</td>
                            <td><button class="btn btn-outline-primary" type="edit">Edit</button></td>
                            <td><button class="btn btn-outline-warning" type="">Details</button></td>
                            <td><button class="btn btn-outline-danger" type="">Delete</button></td>
                        </tr>
                    }
                </tbody>
        
            </table>
        </div>
    </div>
</div>