@model DBFirst.Models.Teacher
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="h-100 bg-success">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="https://legaldev.in/assets/img/services/APEDA-Registration.webp"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; height:800px" />
                        </div>
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase">Registration form</h3>

                            <form asp-action="Registration">

                                <div class=" mb-4">
                                    <div data-mdb-input-init class="form-outline mb-4">
                                            Full Name
                                        <label class="form-label text-danger">*</label>
                                        <input asp-for="name" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="name" class="text-danger"></span>
                                    </div>
                                

                                    @* <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label">Id</label>   
                                        <input asp-for="id" type="number" class="form-control form-control-lg" />    
                                    </div> *@


                                    <div data-mdb-input-init class="form-outline mb-4">
                                            Subject
                                        <label class="form-label text-danger">*</label>
                                        <input asp-for="subject" type="text"  class="form-control form-control-lg" />
                                        <span asp-validation-for="subject" class="text-danger"></span>
                                    </div>
   
                                    <div data-mdb-input-init class="form-outline mb-4">
                                            Email ID
                                        <label class="form-label text-danger">*</label>
                                        <input asp-for="email" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="email" class="text-danger"></span>

                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                            Password
                                        <label class="form-label text-danger">*</label>
                                        <input asp-for="password" type="password" class="form-control form-control-lg" />
                                        <span asp-validation-for="password" class="text-danger"></span>

                                    </div>

                                    <div class="d-flex justify-content-end pt-3">
                                        <input type="reset" value="Reset" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-success btn-lg" />
                                        <input type="submit" value="Register" data-mdb-button-init data-mdb-ripple-init class="btn btn-success btn-lg ms-2" />
                                    </div>

                                </div>
                            
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>              
    </div>
</section>